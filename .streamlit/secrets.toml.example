# Streamlit Community Cloud 环境变量配置示例
# 复制此文件为 secrets.toml 并填入真实值

[bot]
# Solana 配置
solana_rpc_url = "https://api.mainnet-beta.solana.com"
solana_ws_url = "wss://api.mainnet-beta.solana.com"
private_key = "your_wallet_private_key_here"

# 交易配置
max_position_size = 1.0
min_volume_24h = 1000000
min_fdv = 100000
max_slippage = 0.05
default_slippage = 0.02

# Twitter 配置
twitter_bearer_token = "your_twitter_bearer_token_here"

# 跟单配置
leader_wallet_address = "your_leader_wallet_address_here"
copy_trading_enabled = false
min_confidence_score = 70.0

# 日志配置
log_level = "INFO"
log_to_file = true

# 风险管理
max_daily_loss = 0.1
stop_loss_percentage = 0.05
take_profit_percentage = 0.2

# API 配置
helius_api_key = "your_helius_api_key_here"
shyft_api_key = "your_shyft_api_key_here"
jupiter_api_key = "your_jupiter_api_key_here"
raydium_api_key = "your_raydium_api_key_here"

# Telegram Bot 配置
telegram_bot_token = "your_telegram_bot_token_here"
telegram_chat_id = "your_telegram_chat_id_here"

# Geyser 配置
geyser_endpoint = "https://api.helius.xyz/v0"
geyser_token = "your_helius_token_here"
