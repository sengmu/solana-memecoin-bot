# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
PRIVATE_KEY=your_wallet_private_key_here

# Trading Configuration
MAX_POSITION_SIZE=0.1
MIN_VOLUME_24H=1000000
MIN_FDV=100000
MAX_SLIPPAGE=0.05
DEFAULT_SLIPPAGE=0.01

# Twitter Configuration
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Copy Trading (OpenSolBot 增强)
LEADER_WALLET_ADDRESS=leader_wallet_address_here
LEADER_WALLETS=wallet1,wallet2,wallet3
COPY_TRADING_ENABLED=true
COPY_RATIO=1.0
MIN_CONFIDENCE_SCORE=70

# Telegram Bot (OpenSolBot 功能)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Geyser 模式 (OpenSolBot 特性)
GEYSER_ENDPOINT=https://api.helius.xyz/v0
GEYSER_TOKEN=your_helius_token_here

# API 配置 (OpenSolBot 集成)
HELIUS_API_KEY=your_helius_api_key_here
SHYFT_API_KEY=your_shyft_api_key_here
JUPITER_API_KEY=your_jupiter_api_key_here
RAYDIUM_API_KEY=your_raydium_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Risk Management
MAX_DAILY_LOSS=0.1
STOP_LOSS_PERCENTAGE=0.2
TAKE_PROFIT_PERCENTAGE=0.5
